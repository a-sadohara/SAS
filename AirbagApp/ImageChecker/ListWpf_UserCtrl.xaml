<UserControl x:Class="ImageChecker.ListWpf_UserCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageChecker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="dgData" HorizontalAlignment="Center" Width="800" AutoGenerateColumns="False" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" MouseDoubleClick="dgData_MouseDoubleClick" Background="#FFD8B9B9">
            <DataGrid.Columns>
                <DataGridTextColumn Width="1*" Header="Val" Binding="{Binding Path=Val}" FontFamily="Meiryo" FontSize="20" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
